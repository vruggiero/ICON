          inwp_sso        = 1
          inwp_gwd        = 1
          inwp_surface    = 1
          latm_above_top  = .true.
          ldetrain_conv_prec = .true.
	  efdt_min_raylfric = 7200.
	  itype_z0         = 2
	  icapdcycl        = 3
	  icpl_aero_conv   = 1
	  icpl_aero_gscp   = 1
	  icpl_o3_tp       = 1
