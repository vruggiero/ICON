                                                             ! radtop = sob_t + thb_t
          output_grid            =  .TRUE.
          remap                  =  0
        / 
	&run_nml
	  num_lev        = 60
	  lvert_nest     = .false.
	  dtime          = 400     ! timestep in seconds
	  ldynamics      = .TRUE.
