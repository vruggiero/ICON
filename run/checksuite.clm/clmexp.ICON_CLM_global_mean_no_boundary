mkdir ${OUTDIR}

# ---------------------------------------------------------------------------
# copy input data: inidata, lbc data, static data, grids, external parameters
# ---------------------------------------------------------------------------

ln -sf ${INPUTDIR}/inidata/caf1979010100_ini.nc .
