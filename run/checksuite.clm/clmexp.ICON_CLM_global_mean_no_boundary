          dt_rad    = 2400
          dt_conv   = 800
          dt_sso    = 1600
          dt_gwd    = 1600
	/
	&nwp_tuning_nml
          itune_albedo = 0
          !tune_gkwake   = 1.8
          tune_gkwake   = 1.5
          !tune_gfrcrit  = 0.333
          tune_gfrcrit  = 0.425
          !tune_gkdrag   = 0.09
          tune_gkdrag   = 0.075
          tune_dust_abs = 1.
          tune_zvz0i    = 0.85
          tune_box_liq_asy = 3.25
          tune_minsnowfrac = 0.2
          tune_gfluxlaun  = 3.75e-3
          tune_rcucov = 0.075
          tune_rhebc_land = 0.825
          tune_gust_factor=7.0
	/
	&turbdiff_nml
          tkhmin  = 0.6
          tkhmin_strat = 1.0
	  tkmmin        = 0.75
	  pat_len       = 750.
          c_diff  =  0.2
          rlam_heat = 10.0
          rat_sea =  0.8
          ltkesso = .true.
	  frcsmot       = 0.2
	  imode_frcsmot = 2
          alpha1  = 0.125
          icldm_turb = 1
          itype_sher = 1
	  ltkeshs       = .true.
	  a_hshr        = 2.0
