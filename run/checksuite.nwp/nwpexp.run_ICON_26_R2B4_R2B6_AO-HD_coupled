10 2 5
EOF
)

diffrc=$?
if [ $diffrc -ne 0 ] ; then
  echo "GRIB triplets not written as expected"
  finish_status="FAILED"
else
  echo "GRIB file OK"
fi

#-----------------------------------------------------------------------------

if [ ${finish_status} == 'OK' ]; then
  EXIT_STATUS=0
else
  EXIT_STATUS=1
fi

echo "EXIT_STATUS: $EXIT_STATUS"
exit $EXIT_STATUS
